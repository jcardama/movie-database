<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	app:startDestination="@id/splashFragment">

	<fragment
		android:id="@+id/splashFragment"
		android:name="com.jcardama.moviedatabase.ui.splash.SplashFragment"
		android:label="SplashFragment"
		tools:layout="@layout/fragment_splash">
		<action
			app:destination="@id/moviesFragment"
			app:enterAnim="@anim/enter"
			app:exitAnim="@anim/exit"
			app:popEnterAnim="@anim/pop_enter"
			app:popExitAnim="@anim/pop_exit"
			app:popUpTo="@id/splashFragment"
			app:popUpToInclusive="true" />
	</fragment>

	<fragment
		android:id="@+id/moviesFragment"
		android:name="com.jcardama.moviedatabase.ui.movies.MoviesFragment"
		android:label="MoviesFragment"
		tools:layout="@layout/fragment_movies">
		<action
			app:destination="@id/watchListFragment"
			app:enterAnim="@anim/enter"
			app:exitAnim="@anim/exit"
			app:popEnterAnim="@anim/pop_enter"
			app:popExitAnim="@anim/pop_exit" />
		<action
			app:destination="@id/searchFragment"
			app:enterAnim="@anim/enter"
			app:exitAnim="@anim/exit"
			app:popEnterAnim="@anim/pop_enter"
			app:popExitAnim="@anim/pop_exit" />
		<action
			app:destination="@id/detailsFragment"
			app:enterAnim="@anim/enter"
			app:exitAnim="@anim/exit"
			app:popEnterAnim="@anim/pop_enter"
			app:popExitAnim="@anim/pop_exit" />
	</fragment>

	<fragment
		android:id="@+id/watchListFragment"
		android:name="com.jcardama.moviedatabase.ui.watchlist.WatchListFragment"
		android:label="WatchListFragment"
		tools:layout="@layout/fragment_watch_list" >
		<action
			app:destination="@id/detailsFragment"
			app:enterAnim="@anim/enter"
			app:exitAnim="@anim/exit"
			app:popEnterAnim="@anim/pop_enter"
			app:popExitAnim="@anim/pop_exit" />
	</fragment>

	<dialog
		android:id="@+id/searchFragment"
		android:name="com.jcardama.moviedatabase.ui.search.SearchFragment"
		android:label="SearchFragment"
		tools:layout="@layout/fragment_dialog_search" >
		<action
			app:destination="@id/detailsFragment"
			app:enterAnim="@anim/enter"
			app:exitAnim="@anim/exit"
			app:popEnterAnim="@anim/pop_enter"
			app:popExitAnim="@anim/pop_exit" />
	</dialog>

	<fragment
		android:id="@+id/detailsFragment"
		android:name="com.jcardama.moviedatabase.ui.movies.details.DetailsFragment"
		android:label="DetailsFragment"
		tools:layout="@layout/fragment_movie" />

</navigation>
